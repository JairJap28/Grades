<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgraound_rectangle_line"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/number_of_periods"
                        android:textColor="@color/colorText"
                        android:textSize="15dp"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/editTextSettingPeriods"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:imeOptions="actionSend"
                        android:inputType="number"
                        android:singleLine="true"
                        android:text="3"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLightGrayLine"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:id="@+id/LinearLayoutSettingP1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/editTextSettingPP1"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:enabled="false"
                            android:text="100"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/p_1"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayoutSettingP2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/editTextSettingPP2"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:enabled="false"
                            android:text="100"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/p_2"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayoutSettingP3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/editTextSettingPP3"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:enabled="false"
                            android:text="100"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/p_3"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayoutSettingP4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/editTextSettingPP4"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:enabled="false"
                            android:text="100"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/p_4"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayoutSettingP5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/editTextSettingPP5"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:enabled="false"
                            android:text="100"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/p_5"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayoutSettingP6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/editTextSettingPP6"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:enabled="false"
                            android:text="100"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/p_6"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgraound_rectangle_line"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/max_grade"
                    android:textColor="@color/colorText"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/editTextSettingGrade"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:inputType="numberDecimal"
                    android:layout_marginEnd="10dp"
                    android:text="5.0"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgraound_rectangle_line"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Max credits"
                    android:textColor="@color/colorText"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/editTextSettingCredits"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:inputType="number"
                    android:layout_marginEnd="10dp"
                    android:text="4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgraound_rectangle_line"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create Schedule"
                        android:textColor="@color/colorText"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>

                    <Switch
                        android:id="@+id/switchSettingSchedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:checked="true"/>



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/backgraound_rectangle_line"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/colorText"
                    android:text="@string/reset_app"/>

                <Button
                    android:id="@+id/btnSettingsReset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:drawableEnd="@drawable/reset"
                    android:drawablePadding="15dp"
                    android:text="Reset"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgraound_rectangle_line"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/app_information"
                        android:textColor="@color/colorText"
                        android:layout_gravity="center"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_info_outline_black_24dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLightGrayLine"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Control version 1.0"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/developed_by_didacticos_csj"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorLightGrayLine"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Features"
                            android:layout_weight="1"
                            android:textColor="@color/colorText"/>


                        <Button
                            android:id="@+id/btnSettingShowFeatures"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            style="@style/Base.Widget.AppCompat.Button.Borderless"
                            android:drawableStart="@drawable/ic_remove_red_eye_black_24dp"
                            android:drawableTint="@color/colorGray1"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/colorLightGrayLine"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Send suggestions to: "
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorText"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CSJDidacticos@gmail.com"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>




    </ScrollView>

</LinearLayout>