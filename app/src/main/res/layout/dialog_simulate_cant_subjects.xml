<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@color/colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of periods"
                android:textColor="@color/colorText"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_format_list_numbered_black_24dp"
                android:layout_weight="1"/>

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorLightGrayLine"
            android:layout_margin="10dp"/>

        <NumberPicker
            android:id="@+id/numberPickerCantSubjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp">
        </NumberPicker>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">

        <Button
            android:id="@+id/btnCancelNumberSubjectSimulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_cancel_black_24dp"
            android:drawableTint="@color/colorRed"
            android:layout_marginStart="10dp"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/btnStartSimulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/start"
            android:layout_marginEnd="10dp"
            android:drawableEnd="@drawable/ic_play_arrow_black_24dp"
            android:drawableTint="@color/colorGreen"/>
    </LinearLayout>

</LinearLayout>